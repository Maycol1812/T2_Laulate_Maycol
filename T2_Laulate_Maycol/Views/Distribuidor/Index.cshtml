@model IEnumerable<T2_Laulate_Maycol.Models.Distribuidor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="container pt-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Distribuidores</h2>

        </div>
        <div class="col-6">
            <a asp-controller="Distribuidor" asp-action="Crear" class="btn btn-primary">Ingrese nuevo Distribuidor</a>
        </div>

    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th> Nombre Distribuidor </th>
                    <th> Razon Social </th>
                    <th> Telefono </th>
                    <th> Anio inicio </th>
                    <th> Contacto </th>
                    <th>  </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="60%">@item.NombreDistribuidor</th>
                        <th width="50%">@item.RazonSocial</th>
                        <th width="40%">@item.Telefono</th>
                        <th width="30%">@item.AnioInicioOperacion</th>
                        <th width="20%">@item.Contacto</th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {

        <p>No hay registros en la categoria</p>
    }

</div>

